input : 3 5 
        3 9 12 16 20
        
output : 11




#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n,k;
    cin >> k >> n;
    int arr[n];
    for(int i=0;i<n;i++)
    {
        cin >> arr[i];
    }

        sort(arr,arr+n);  
       int maxie,minie;
       int ans = arr[n-1] - arr[0];
       
       for(int i=1;i<n;i++){
       
           if(arr[i]>=k){
               maxie = max(arr[i-1]+k,arr[n-1]-k);
               minie = min(arr[0]+k,arr[i]-k);
               ans = min(ans,maxie-minie);
           }    
           
       }
   cout <<  ans << "\n";
}
