find nth tearm of series 
0,0,7,6,14,12,21,18, 28

example : input- 15   output- 42
          input- 14   output- 36
          
code -    

#include <bits/stdc++.h>
using namespace std;
#define ll long long int 

int main() {
	
	int n;
  int res = 0;
  cin >> n;
  if(n%2==0){
  	for(int i=0 ;i < n/2-1;i++){
		res += 6;
	}
	cout << res ;
  } else {
  	for(int i=0 ;i < n/2-1;i++){
		res += 7;
	}
	cout << res ;
  }
  return 0;
}

